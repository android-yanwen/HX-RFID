<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:scrollbars="none" >

   <RelativeLayout 
       android:layout_height="match_parent"
       android:layout_width="fill_parent"
       >
       <ImageView 
           android:id="@+id/logo_member" 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:layout_alignParentTop="true" 
           android:layout_centerHorizontal="true" 
           android:layout_marginTop="15dp" 
           android:contentDescription="@string/logo" 
           android:src="@drawable/logo" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_member"
        android:orientation="vertical" >     
    
       <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
         android:gravity="center_horizontal"
         >
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             >
             <Button
                 android:id="@+id/temperatureButton" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/wendu1"/>
             <TextView 
                 android:id="@+id/strtemperature"
                 android:layout_width="96dp"
                 android:layout_height="40dp"
                 android:text="温度"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_alignBottom="@id/temperatureButton"
                 />
         </RelativeLayout>
         <RelativeLayout 
            	 android:layout_width="wrap_content"
             	 android:layout_height="wrap_content"
             	 android:layout_marginLeft="50dp">
             <Button
                 android:id="@+id/humidityButton" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/shidu1"/>
             <TextView 
                 android:id="@+id/strhumidity"                 
                 android:layout_width="96dp"
                 android:layout_height="40dp"
                 android:text="湿度"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_alignBottom="@id/humidityButton"
                 />
         </RelativeLayout>
     		
     </LinearLayout>
<LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp"         
         >
          <RelativeLayout 
            	 android:layout_width="wrap_content"
             	 android:layout_height="wrap_content"
				 
				 >
             <Button
                 android:id="@+id/illuminationButton"                
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/guangzhao1"/>

             <TextView
                 android:id="@+id/strillumination"
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:layout_alignBottom="@id/illuminationButton"
                 android:gravity="center"
                 android:text="光照"
                 android:textColor="@color/black" />

         </RelativeLayout>
       
                <RelativeLayout 
            	 android:layout_width="wrap_content"
             	 android:layout_height="wrap_content"
				 android:layout_marginLeft="50dp"                  
             	 >
             <Button
                 android:id="@+id/windButton"
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/fengsu1"/>
             <TextView
                 android:id="@+id/strwind" 
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="风速"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_alignBottom="@id/windButton"     
                 />
         </RelativeLayout>
        
     		
     </LinearLayout>        
<LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp"         
         >
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             >
             <Button
                 android:id="@+id/co2Button" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/co21"/>
             <TextView 
                 android:id="@+id/strco2"                 
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="二氧化碳"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_alignBottom="@id/co2Button"                      
                 />
         </RelativeLayout>
         <RelativeLayout 
            	 android:layout_width="wrap_content"
             	 android:layout_height="wrap_content"
 				 android:layout_marginLeft="50dp"                  
             	 >
             <Button
                 android:id="@+id/atmosphereButton"
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/daqiyali1"/>
             <TextView
                 android:id="@+id/stratmosphere"                  
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="大气压力"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_alignBottom="@id/atmosphereButton"                    
                 />
         </RelativeLayout>
     		
     </LinearLayout>
<LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp"         
         >
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/soilButton" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/turangshuifen1"/>
             <TextView
                 android:id="@+id/strsoil"                  
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="土壤水分"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_alignBottom="@id/soilButton"     
                 />
         </RelativeLayout>
      <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="50dp"
             >
             <Button
                 android:id="@+id/weatherButton" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/yuxue1"/>
             <TextView 
                 android:id="@+id/strweather"                 
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="雨雪天气"
                 android:textColor="@color/black"
                 android:gravity="center"
                 android:layout_alignBottom="@id/weatherButton"                       
                 />
         </RelativeLayout>
     		
     </LinearLayout>
</LinearLayout>   
</RelativeLayout>
</ScrollView>