<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:scrollbars="none" >

   <RelativeLayout 
       android:layout_height="fill_parent"
       android:layout_width="fill_parent"
       >
       <ImageView 
           android:id="@+id/logo_member" 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:layout_alignParentTop="true" 
           android:layout_centerHorizontal="true" 
           android:layout_marginTop="15dp" 
           android:contentDescription="@string/logo" 
           android:src="@drawable/logo_member" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_member"
        android:orientation="vertical" >     
    
       <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="30dp"
         android:gravity="center_horizontal"
         >
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             >
             <Button
                 android:id="@+id/temperatureButton" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/c_temperature"/>
             <TextView 
                 android:id="@+id/strtemperature"
                 android:layout_width="96dp"
                 android:layout_height="40dp"
                 android:text="温度"
                 android:gravity="center"
                 android:layout_alignBottom="@id/temperatureButton"
                 />
         </RelativeLayout>
         <RelativeLayout 
            	 android:layout_width="wrap_content"
             	 android:layout_height="wrap_content"
             	 android:layout_marginLeft="50dp">
             <Button
                 android:id="@+id/humidityButton" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/c_humidity"/>
             <TextView 
                 android:id="@+id/strhumidity"                 
                 android:layout_width="96dp"
                 android:layout_height="40dp"
                 android:text="湿度"
                 android:gravity="center"
                 android:layout_alignBottom="@id/humidityButton"
                 />
         </RelativeLayout>
     		
     </LinearLayout>   
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp"
         >
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             >
             <Button
                 android:id="@+id/currentButton" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/c_current"/>
             <TextView
                 android:id="@+id/strcurrent"                  
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="电流"
                 android:gravity="center"
                 android:layout_alignBottom="@id/currentButton"                    
                 />
         </RelativeLayout>
         <RelativeLayout 
            	 android:layout_width="wrap_content"
             	 android:layout_height="wrap_content"
             	 android:layout_marginLeft="50dp"  
             	 >
             <Button
                 android:id="@+id/smokeButton"				                 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/c_smoke"/>
             <TextView 
                 android:id="@+id/strsmoke"                 
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="烟雾"
                 android:gravity="center"
                 android:layout_alignBottom="@id/smokeButton"                    
                 />
         </RelativeLayout>
     		
     </LinearLayout>
<LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp"         
         >
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             >
             <Button
                 android:id="@+id/co2Button" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/c_co2"/>
             <TextView 
                 android:id="@+id/strco2"                 
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="二氧化碳"
                 android:gravity="center"
                 android:layout_alignBottom="@id/co2Button"                      
                 />
         </RelativeLayout>
         <RelativeLayout 
            	 android:layout_width="wrap_content"
             	 android:layout_height="wrap_content"
				 android:layout_marginLeft="50dp">
             <Button
                 android:id="@+id/illuminationButton"                
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/c_illumination"/>
             <TextView 
                 android:id="@+id/strillumination"                 
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="光照"
                 android:gravity="center"
                 android:layout_alignBottom="@id/illuminationButton"     
                 />
         </RelativeLayout>
     		
     </LinearLayout>        


<LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp"         
         >
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/directionButton" 
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/c_direction"/>
             <TextView
                 android:id="@+id/strdirection"                  
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="风向"
                 android:gravity="center"
                 android:layout_alignBottom="@id/directionButton"     
                 />
         </RelativeLayout>
         <RelativeLayout 
            	 android:layout_width="wrap_content"
             	 android:layout_height="wrap_content"
				 android:layout_marginLeft="50dp"                  
             	 >
             <Button
                 android:id="@+id/windButton"
                 android:layout_height="96dp"
                 android:layout_width="96dp"
                 android:background="@drawable/c_wind"/>
             <TextView
                 android:id="@+id/strwind" 
                 android:layout_width="96dp"
                 android:layout_height="50dp"
                 android:text="风速"
                 android:gravity="center"
                 android:layout_alignBottom="@id/windButton"     
                 />
         </RelativeLayout>
     		
     </LinearLayout>
</LinearLayout>   
</RelativeLayout>
</ScrollView>